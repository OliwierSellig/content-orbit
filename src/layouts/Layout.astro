---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import { ToasterProvider } from "@/components/ToasterProvider";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Content Orbit - Zoptymalizuj i skaluj proces tworzenia treÅ›ci SEO." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Enable View Transitions for smooth page navigation -->
    <ClientRouter />
  </head>
  <body class="font-sans">
    <main transition:name="page-content">
      <slot />
    </main>
    <ToasterProvider client:load />
  </body>
</html>
